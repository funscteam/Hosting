def konversi_detik(detik):
    jam = detik // 3600
    sisa_detik = detik % 3600
    menit = sisa_detik // 60
    detik_sisa = sisa_detik % 60
    return jam, menit, detik_sisa

total_detik = int(input("Masukan total detik:"))
hasil_konversi = konversi_detik(total_detik)
print("Hasil konversi :", hasil_konversi)
